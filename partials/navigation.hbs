<nav class="navbar navbar-default">
    <div class="container-fluid">
        {{! Branding an hamburger button }}
        <div class="navbar-header">
            {{! Hamburger button }}
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                data-target="#gct-navbar-collapse" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            {{! Navbar branding }}
            <a class="navbar-brand" href="{{@blog.url}}">
                {{#if @blog.logo}}
                    <img src="{{@blog.logo}}" alt="{{@blog.title}}" />
                {{else}}
                    {{@blog.title}}
                {{/if}}
            </a>
        </div>

        {{! Navigation links }}
        <div class="collapse navbar-collapse" id="gct-navbar-collapse">
            <ul class="nav navbar-nav">
                {{#foreach navigation}}
                    <li class="nav-item-{{slug}}{{#if current}} active{{/if}}">
                        <a href="{{url absolute="true"}}">{{label}}</a>
                    </li>
                {{/foreach}}
            </ul>
        </div>
    </div>
</nav>